<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardElevation="4dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lblTarea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp"
            android:layout_marginTop="16dp"
            android:text="Tarea:"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvTarea"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/lblTarea"
            android:layout_alignParentStart="true"
            android:layout_marginStart="85dp"
            android:text="Tarea" />

        <TextView
            android:id="@+id/lblDetalle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/lblTarea"
            android:layout_below="@+id/lblTarea"
            android:text="Detalle:"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDetalle"
            android:layout_width="200dp"
            android:layout_height="47dp"
            android:layout_alignBaseline="@+id/lblDetalle"
            android:layout_centerHorizontal="true"
            android:text="Detalle" />

        <TextView
            android:id="@+id/tvFecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/lblTarea"
            android:layout_marginTop="85dp"
            android:text="Fecha"
            android:textSize="15dp"
            android:textStyle="bold" />

    </RelativeLayout>

</android.support.v7.widget.CardView>